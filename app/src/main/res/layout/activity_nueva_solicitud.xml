<?xml version="1.0" encoding="utf-8"?>
<!--El linear layout es util para la generacion de vistas
junto al tag android:gravity permite alinear los objetos
en la parte superior, tambien se puede usar el tag
android:orientation para configurar si es vertical u horizontal-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Nueva Solicitud"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Imagen"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <ImageView
            android:id="@+id/picture"
            android:layout_width="98dp"
            android:layout_height="135dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2"/>

        <android.widget.Button
            android:id="@+id/textViewcambiar"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/blue_button"
            android:elevation="3dp"
            android:layout_marginTop="55dp"
            android:layout_marginStart="30dp"
            android:hint="Cambiar"
            android:fontFamily="@font/poppins_semibold"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toEndOf="@id/picture"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Descripción"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/picture" />

        <EditText
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="3dp"
            android:elevation="5dp"
            android:background="@drawable/white_button"
            android:inputType="text"
            android:fontFamily="@font/poppins"
            android:gravity="top"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Dirección"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descripcion" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:context=".NuevaSolicitudActivity" />

        <android.widget.Button
            android:id="@+id/textViewcancelar"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/red_button"
            android:elevation="3dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="25dp"
            android:hint="Cancelar"
            android:fontFamily="@font/poppins_semibold"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <android.widget.Button
            android:id="@+id/textViewenviar"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/green_button"
            android:elevation="3dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="25dp"
            android:hint="Enviar"
            android:fontFamily="@font/poppins_semibold"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>